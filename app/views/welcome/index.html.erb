<% if logged_in? %>
  <div class="row">
    <div class="col-lg-6 offset-lg-3">

    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-lg-6 offset-lg-3">
      <% if @events.blank? %>
        <p class="text-center">You don't have any events.</p>
      <% else %>
        <% @events.each do |status| %>
          <%= render 'events/event', event: event %>
          <br>
        <% end %>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col-lg-6 offset-lg-3">
      <h1>Welcome to When2Meet 2.0!</h1>
      <p>To get started, sign up with a new account or log in with a current one!</p>
    </div>
  </div>
<% end %>
